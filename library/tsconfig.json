{ 
  "compilerOptions": {
    "target": "ES2024",
    "module": "ES2022",
    "lib": ["ES2024", "DOM"],
    "moduleResolution": "bundler", 
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true
  }
}